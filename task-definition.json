{
  "family": "service",
  "executionRoleArn": "ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "devops-application",
      "image": "ECR_IMAGE",
      "cpu": 1,
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:3000 || exit 1"],
        "Interval": 30,
        "Retries": 3,
        "Timeout": 5
      },
      "portMappings": [
        {
          "hostPort": 3000,
          "protocol": "tcp",
          "containerPort": 3000
        }
      ],
      "environment": [
        {
          "name": "PORT",
          "value": "3000"
        },
        {
          "name": "DB_HOST",
          "value": "SECRET_DB_HOST"
        },
        {
          "name": "DB_USERNAME",
          "value": "SECRET_DB_USERNAME"
        },
        {
          "name": "DB_PASSWORD",
          "value": "SECRET_DB_PASSWORD"
        },
        {
          "name": "DB_NAME",
          "value": "SECRET_DB_NAME"
        }
      ],
      "memory": 768,
      "essential": true
    }
  ],
  "requiresCompatibilities": [
    "EC2"
  ],
  "networkMode": "host",
  "tags": [
    {
      "key": "Terraform",
      "value": "true"
    }
  ]
}