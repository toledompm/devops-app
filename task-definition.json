{
  "family": "service",
  "executionRoleArn": "ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "devops-application",
      "image": "ECR_IMAGE",
      "cpu": 1,
      "portMappings": [
        {
          "hostPort": APP_PORT,
          "protocol": "tcp",
          "containerPort": APP_PORT
        }
      ],
      "environment": [
        {
          "name": "PORT",
          "value": "APP_PORT"
        },
        {
          "name": "DB_HOST",
          "value": "SECRET_DB_HOST"
        },
        {
          "name": "DB_USERNAME",
          "value": "SECRET_DB_USERNAME"
        },
        {
          "name": "DB_PASSWORD",
          "value": "SECRET_DB_PASSWORD"
        },
        {
          "name": "DB_NAME",
          "value": "SECRET_DB_NAME"
        }
      ],
      "memory": 768,
      "essential": true,
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:APP_PORT || exit 1"],
        "Interval": 30,
        "Retries": 3,
        "Timeout": 5
      }
    }
  ],
  "requiresCompatibilities": ["EC2"],
  "networkMode": "host",
  "tags": [
    {
      "key": "Terraform",
      "value": "true"
    }
  ]
}
